%% -*- mode: erlang -*-

{eunit_opts, [verbose, {skip_deps, true}]}.
{eunit_exclude_deps, true}.
{clean_files, ["test/*.beam", ".eunit/*"]}.
{xref_checks, [undefined_function_calls, export_not_used]}.
{cover_enabled, true}.
{eunit_opts, [verbose]}.
{minimum_otp_vsn, "19.3"}.

{plugins, [rebar3_elvis_plugin]}.

{dialyzer, [
            %{warnings, [warning()]},
            {get_warnings, true},
            %{plt_apps, top_level_deps | all_deps} % default: top_level_deps
            %{plt_extra_apps, [atom()]},
            %{plt_location, local | file:filename()},
            %{plt_prefix, string()},
            %{base_plt_location, global | file:filename()},
            %{base_plt_prefix, string()},
            {base_plt_apps, [tpic]}
           ]}.

{erl_opts, [
    fail_on_warning,
    warnings_as_errors,
    {parse_transform, lager_transform},
    {lager_truncation_size, 1024}
]}.




{deps, [
